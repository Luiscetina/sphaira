{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "core",
            "displayName": "core",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}"
        },
        {
            "name": "Release",
            "displayName": "Release",
            "inherits":["core"],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "MinSizeRel",
                "LTO": true
            }
        },
        {
            "name": "Dev",
            "displayName": "Dev",
            "inherits":["core"],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "MinSizeRel",
                "LTO": false,
                "DEV_BUILD": true
            }
        }
    ],
    "buildPresets": [
        {
            "name": "Release",
            "configurePreset": "Release",
            "jobs": 16
        },
        {
            "name": "Dev",
            "configurePreset": "Dev",
            "jobs": 16
        }
    ]
}
